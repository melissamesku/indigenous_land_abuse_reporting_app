<div class="bkg">
    <div class="opacity-bkg">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :class => 'border-black' %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", :class => 'border-black' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", :class => 'border-black' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="landing-page-content">
    <h1>Indigenous territory under threat</h1>
    <p class="red-text">Every day, thousands of acres of protected indigenous land is lost to illegal mining, illegal logging, and illegal resource extraction.</p>
  </div>

</div
